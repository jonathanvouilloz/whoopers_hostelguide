                        // @ts-ignore
                        const activeScreen = phoneScreens[targetId];
                        if (activeScreen) {
                            activeScreen.style.opacity = '1';
                            activeScreen.style.transform = 'scale(1)';
                            activeScreen.style.zIndex = '10';
                        }
                    }
                });
            }, observerOptions);

            steps.forEach(step => observer.observe(step));
        });
    </script>
