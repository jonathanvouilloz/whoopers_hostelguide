---
/**
 * EventCard - Simplified card for timeline display
 * Shows title, tagline, price, location and Details link
 */
import type { HostelEvent } from '../lib/types';

interface Props {
  event: HostelEvent;
}

const { event } = Astro.props;
---

<article class="event-card card overflow-hidden">
  <div class="p-3">
    <!-- Title and tagline -->
    <div class="mb-3">
      <h3 class="text-base font-bold text-[--color-text] leading-tight">{event.title}</h3>
      <p class="text-sm text-[--color-text-secondary] mt-1">{event.tagline}</p>
    </div>

    <!-- Price -->
    {event.price && (
      <div class="text-sm mb-3">
        <span class="text-[--color-primary] font-bold">{event.price}</span>
      </div>
    )}

    <!-- Bottom row: Location left, Details right -->
    <div class="flex items-center justify-between pt-2 border-t border-white/5">
      <div class="flex items-center gap-1 text-xs text-[--color-text-secondary]">
        <span class="material-symbols-outlined" style="font-size: 12px;">location_on</span>
        <span>{event.location}</span>
      </div>
      <a
        href={`/event/${event.id}`}
        class="event-details-link"
      >
        <span>Details</span>
        <span class="material-symbols-outlined" style="font-size: 12px;">arrow_forward</span>
      </a>
    </div>
  </div>
</article>

<style>
  .event-card {
    transition: transform 0.2s ease;
  }
  .event-card:active {
    transform: scale(0.98);
  }
  .event-details-link {
    display: flex;
    align-items: center;
    gap: 2px;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-primary);
    transition: opacity 0.2s;
  }
  .event-details-link:hover {
    opacity: 0.8;
  }
</style>
